<div class="container">
  <h3 class="text-center mt-3">ユーザー詳細</h3>
  <div class="row">
    <div class="col-lg-3 mt-3">

      <%= render 'user/users/profile', user: @user %>

    </div>
    <div class="col-lg-9 mt-3">
      <h5 class="text-center mt-3"><%= @user.name %>さんのフォロワー：<%= @user.followers.count %></h5>
      <% if @users.exists? %>

       <%= render 'user/users/users', users: @users %>

      <% else %>
        <div class="informetion">
          <%= image_tag("green-flower.png")%>
        <h5>＊ ユーザーはいません。</h5>
      </div>
      <% end %>
    </div>
  </div>
</div>