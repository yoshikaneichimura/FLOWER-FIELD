<div class="container">
  <h3 class="text-center mt-3"><%= @user.name %>さんのフォロワー：<%= @user.followers.count %></h3>
  <div class="row">
    <div class="col-lg-3 mt-3">

      <%= render 'user/users/profile', user: @user %>

    </div>
    <div class="col-lg-9 mt-3">
      <% if @users.exists? %>

       <%= render 'user/users/users', users: @users %>

      <% else %>
        <h1 class="text-center mt-5">ユーザーはいません</h1>
      <% end %>
    </div>
  </div>
  <p class="text-center"><%= link_to "＊ユーザー情報に戻る",admin_user_path(@user.id),class: "text-reset" %></p>
</div>