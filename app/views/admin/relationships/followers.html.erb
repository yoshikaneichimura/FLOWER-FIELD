<div class="container">
  <h3 class="text-center mt-3">ユーザー詳細</h3>
  <div class="row">
    <div class="col-lg-3 mt-5">

      <%= render 'user/users/profile', user: @user %>

    </div>
    <div class="col-lg-9 mt-3">
      <p class="text-center mt-3"><span class="text-white"><%= @user.name %></span><br>
      さんのフォロワー：<%= @user.followers.count %></p>
      <% if @users.exists? %>
        <div class="d-flex justify-content-center mt-3">
          <div class="relationship-group">

            <%= render 'user/users/users', users: @users %>

          </div>
        </div>
      <% else %>
        <div class="informetion">
          <%= image_tag("green-flower.png") %>
        <h5>＊ ユーザーはいません。</h5>
        </div>
      <% end %>
    </div>
  </div>
  <p class="text-center"><%= link_to "＊ 投稿者詳細を見る",admin_user_path(@user.id),class: "text-reset" %></p>
</div>