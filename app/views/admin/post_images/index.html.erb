<div class="container">
  <div class="my-3">
    <h3 class="text-center">投稿一覧</h3>
      <% if flash[:notice] %>
        <p id = "notice">
          <%= flash[:notice] %>
        </p>
      <% end %>
      <%= form_with url: admin_post_images_path, method: :get, class: 'boards_searchForm' do %>
        <form>
          <div class="row">
            <div class="m-3">
              <h5>対象の地域を選択して下さい</h5>
            </div>
            <div class="form-group col-6 m-3">
            <%= select_tag :tag_id,
                options_from_collection_for_select(Tag.all, :id, :area, params[:tag_id]),
                {
                  prompt: 'エリアで絞り込み',
                  class: 'w-75 form-control',
                  onchange: 'submit(this.form);'
                }
              %>
            </div>
          </div>
        </form>
      <% end %>
    <div class="my-3">
    <% if @post_images.exists? %>
    <div class="table-responsive-lg">
      <%= render 'user/post_images/flowers' ,post_images: @post_images %>
    </div>
    <% else %>
      <h1 class="text-center">投稿はまだありません</h1>
    <% end %>
    </div>
  </div>
</div>
