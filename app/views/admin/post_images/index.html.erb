<h1>投稿一覧</h1>

<% if flash[:notice] %>
  <p id = "notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<%= form_with url: admin_post_images_path, method: :get, class: 'boards_searchForm' do %>
  <%= select_tag :tag_id,
    options_from_collection_for_select(Tag.all, :id, :area, params[:tag_id]),
    {
      prompt: 'エリアで絞り込み',
      onchange: 'submit(this.form);'
    }
  %>
  <% end %>

<% if @post_images.exists? %>
  <%= render 'flowers' ,post_images: @post_images %>
<% else %>
  <h3>投稿はまだありません</h3>
<% end %>
