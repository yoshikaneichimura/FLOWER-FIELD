<div class="container">
  <h3 class="text-center mt-3">投稿者詳細</h3>

  <% if flash[:notice] %>
    <p id = "notice">
      <%= flash[:notice] %>
    </p>
  <% end %>

  <div class="row">
    <div class="col-lg-3">
      <div class="mt-3">
        <%= render 'user/users/profile', user: @user %>
      </div>
      <div class="mt-3">
        <% if @user.is_active == true %>
          <h5>有効会員</h5>
        <% else %>
          <h5>退会済み</h5>
        <% end %>
      </div>
      <div>
        <!--<p>< link_to "#{user.followings.count} ：フォロー中", user_user_followings_path(user.id), class: "text-reset" %></p>-->
        <!--<p>< link_to "#{user.followers.count} ：フォロワー", user_user_followers_path(user.id), class: "text-reset"%></p>-->
      </div>
      <div class="mt-3">
        <%= link_to "プロフィールを編集する",edit_admin_user_path,class: "btn btn-info" %>
      </div>
    </div>
    <div class="col-lg-9 mt-3">
      <h3 class="text-center">このユーザーの花の咲く場所</h3>
      <% if @post_images.exists? %>
        <%= render 'admin/post_images/flowers', post_images: @post_images %>
      <% else %>
      <div class="flowers-block">
        <h1 class="text-center m-5">投稿はまだありません</h1>
      </div>
      <% end %>
    </div>
  </div>
</div>
