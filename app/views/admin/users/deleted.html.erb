<div class="container">
  <h3 class="text-center mt-3">退会者一覧</h3>
  <div class="d-flex justify-content-center mt-3">
    <div class="user-group">
      <% if @users.exists? %>
        <% @users.each do |user| %>

          <%= render 'user/users/user_block', user: user %>

        <% end %>
      <% else %>
        <div class="informetion">
          <%= image_tag("green-flower.png")%>
          <h5>＊ ユーザーはいません。</h5>
        </div>
      <% end %>
    </div>
  </div>
</div>