<div class="container">
  <h1 class="text-center m-5">HOME</h1>
  <div>
    <div class="d-flex flex justify-content-center">
      <div>
      <% if flash[:notice] %>
        <p id = "notice">
          <%= flash[:notice] %>
        </p>
      <% end %>
      </div>
    </div>
    <div class="d-flex flex justify-content-center">
    <% if signed_in? %>
        <% @post_images.each do | post_image | %>
          <div class="image-block"><%= image_tag post_image.get_image(100,100) %></div>
        <% end %>
      
    <% else %>
    
      <div class="m-5">
        <div class="d-inline m-3">
          <%= link_to "新規登録", new_user_registration_path, class: "btn btn-info" %>
        </div>
        <div class="d-inline m-3">
         <%= link_to "ログイン", new_user_session_path, class: "btn btn-success" %>
        </div>
      </div>
      
    </div>
    <div class="d-flex flex justify-content-center">
      <div class="mt-5">
        <%= link_to "管理者ログイン", new_admin_session_path, class: "btn btn-danger" %>
      </div>
    </div>
    <div class="d-flex flex justify-content-center">
      <div class="m-5">
        <div class="d-flex flex justify-content-center m-3 d-lg-inline m-3">
          <%= link_to "ゲストユーザーログイン", user_guest_sign_in_path, class: "btn-lg btn-primary", method: :post %>
        </div>
        <div class="d-flex flex justify-content-center m-3 d-lg-inline m-3">
          <%= link_to "ゲスト管理者ログイン", admin_guest_sign_in_path, class: "btn-lg btn-danger", method: :post %>
        </div>
      </div>
    </div>
    <% end %>
    </div>
  </div>
</div>
