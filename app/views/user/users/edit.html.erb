<h1>プロフィールを編集する</h1>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do | message |%>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user,url: user_user_path, method: :patch do |f| %>
  <p>プロフィール画像</p>
  <%= f.file_field :profile_image, accept: "image/*"%>
  <p>名前</p>
  <%= f.text_field :name %>
  <p>自己紹介</p>
  <%= f.text_area :introduction %>

  <%= f.submit "この内容で保存する"%>

<% end %>

<p><%= link_to 'メールアドレス、パスワードを変更する',edit_user_registration_path(@user.id) %></p>

<p><%= link_to "退会する",user_user_unsubscribes_path(@user.id) %></p>
