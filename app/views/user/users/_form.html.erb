<form>
  <div class="form-group">
    <label for="InputProfileImage">プロフィール画像</label><br>
    <%= f.file_field :profile_image, class: "file-control", id: "InputProfileImage", accept: "image/*"%>
  </div>
  <div class="form-group">
    <label for="InputName">ユーザーネーム</label><br>
    <div class="input-group">
      <div class="input-group-prepend">
        <div class="input-group-text"><i class="fa-solid fa-user"></i></div>
      </div>
      <%= f.text_field :name, class: "form-control", id: "InputName" %>
    </div>
  </div>
  <div class="form-group">
    <label for="InputIntroduction">自己紹介</label><br>
    <%= f.text_area :introduction, class: "form-control", id: "InputIntroduction" %>
  </div>
  <% if local_assigns[:admin_flag].present? %>
    <div class="form-group">
      <label>会員状況</label><br>
      <div class="form-check form-check-inline mr-5">
        <%= f.radio_button :is_active, true, class: "form-check-input" %>
        <label class="form-check-label">有効会員</label>
      </div>
      <div class="form-check form-check-inline mr-5" >
        <%= f.radio_button :is_active, false, class: "form-check-input"  %>
        <label class="form-check-label">退会済み</label>
      </div>
    </div>
  <% end %>
  <%= f.submit "この内容で保存する", class: "btn btn-success my-3" %>
</form>