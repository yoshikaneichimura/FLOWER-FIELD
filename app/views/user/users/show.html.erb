<div class="container">
  <h3 class="text-center mt-3">ユーザー情報</h3>
  <% if flash[:notice] %>
    <p id = "notice">
      <%= flash[:notice] %>
    </p>
  <% end %>
  <% if @user.is_active == false %>
    <h3>退会済みユーザー</h3>
  <% end %>
  <div class="row mt-3">
    <div class="col-lg-4">
      <%= render 'profile', user: @user %>
    </div>
    <div class="col-lg-8 mt-3">
      <% if @user == current_user %>
        <h3 class="text-center">あなたの花の咲く場所</h3>
      <% else %>
        <h3 class="text-center">このユーザーの花の咲く場所</h3>
      <% end %>
      <% if @post_images.exists? %>
        <%= render 'user/post_images/flowers', post_images: @post_images %>
      <% else %>
      <div class="flowers-block">
        <h1 class="text-center m-5">投稿はまだありません</h1>
      </div>
      <% end %>
    </div>
  </div>
</div>