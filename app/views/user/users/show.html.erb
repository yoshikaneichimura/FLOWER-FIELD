<div class="container">
  <% if @user == current_user %>
    <h3 class="text-center mt-3">マイページ</h3>
  <% else %>
    <h3 class="text-center mt-3">ユーザー情報</h3>
  <% end %>

  <div class="row">
    <div class="col-lg-4">

      <%= render 'profile', user: @user %>

    </div>
    <div class="col-lg-8 mt-3">
      <% if @user == current_user %>
        <h5 class="text-center">あなたの花の咲く場所</h5>
      <% else %>
        <h5 class="text-center">このユーザーの花の咲く場所</h5>
      <% end %>
      
      <% if @post_images.exists? %>

        <%= render 'user/post_images/flowers', post_images: @post_images %>

      <% else %>
        <div class="informetion">
          <%= image_tag("green-flower.png") %>
          <h5>投稿はまだありません。</h5>
        </div>
      <% end %>
    </div>
  </div>
</div>