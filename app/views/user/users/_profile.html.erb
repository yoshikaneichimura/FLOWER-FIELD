<div class="profile-block">
  <% if user == current_user %>
    <h5 class="text-center">あなたのプロフィール</h5>
  <% elsif %>
    <h5 class="text-center">プロフィール</h5>
  <% end %>
  <div class="my-5">
    <%= image_tag user.get_profile_image(100,100) %>
  </div>
  <p>ユーザーネーム</p>
  <p><%= user.name %></p>
  <p>自己紹介</p>
  <p><%= user.introduction %></p>

  <div>
    <p><%= link_to "#{user.followings.count} ：フォロー中", user_user_followings_path(user.id), class: "text-reset" %></p>
    <p><%= link_to "#{user.followers.count} ：フォロワー", user_user_followers_path(user.id), class: "text-reset"%></p>
  </div>
  <div>
    <% if current_user.following?(user)%>
      <%= link_to "フォローを外す", user_user_relationships_path(user.id), class: "btn btn-danger my-3", method: :delete %>
    <% elsif current_user != user && user.is_active == true %>
      <%= link_to "フォローする", user_user_relationships_path(user.id), class: "btn btn-success my-3",method: :post %>
    <% end %>
  </div>
  <div>
    <% if user.id == current_user.id %>
      <%= link_to "花の咲く場所を投稿する", new_user_post_image_path, class: "btn btn-success m-3" %>
      <%= link_to "プロフィールを編集する",edit_user_user_path(user.id), class: "btn btn-info m-3" %><br>
    <% end %>
  </div>
  <div>
  <% if user.id == current_user.id %>
    <%= link_to "あなたのお気に入りリスト",favorites_user_user_path(user), class: "text-reset" %>
  <% elsif %>
    <%= link_to "このユーザーのお気に入りリスト",favorites_user_user_path(user), class: "text-reset" %>
  <% end %>
  </div>
</div>