<h3 class="text-center mt-3">投稿内容</h3>
  <% if post_image.user.is_active == false %>
    <h3>こちらは退会済みユーザーの投稿です</h3>
  <% end %>
<div class="row">
  <div class="col-lg-6 mt-5 ">
    <div class="d-flex justify-content-center">
      <div><%= image_tag post_image.get_image(600,600) ,class: "img-fluid" %></div>
    </div>
  </div>
  <div class="col-lg-3 order-lg-last mt-3">
    <h5 class="text-center">投稿ユーザー情報</h5>
    <div class="d-flex flex-column align-items-center">
      <div class="mt-3">

        <% if user_signed_in? %>
          <%= link_to user_user_path(user.id) do %>
            <%= image_tag post_image.user.get_profile_image(150,150) %>
          <% end %>
        <% elsif admin_signed_in? %>
          <%= link_to admin_user_path(user.id) do %>
            <%= image_tag post_image.user.get_profile_image(150,150) %>
          <% end %>
        <% end %>

      </div>
      <h5 class="text-center mt-3"><%= post_image.user.name %></h5>
      <p class="text-center mt-3">投稿件数：<%= user.post_images.count %></p>

      <% if user_signed_in? %>

      <p class="text-center"><%= link_to "#{post_image.user.followings.count} ：フォロー中", user_user_followings_path(user.id), class: "text-reset" %></p>
      <p class="text-center"><%= link_to "#{post_image.user.followers.count} ：フォロワー", user_user_followers_path(user.id), class: "text-reset"%></p>
        <% if post_image.user == current_user %>
          <div class="mt-3"><%= link_to "この投稿を編集する" ,edit_user_post_image_path(post_image) , class: "btn btn-info" %></div>
          <div class="mt-3"><%= link_to "この投稿を削除する" ,user_post_image_path(post_image), class: "btn btn-danger" ,method: :delete, "data-confirm" => "本当に削除しますか？" %></div>
        <% end %>

      <% elsif admin_signed_in? %>

        <p class="text-center"><%= link_to "#{user.followings.count}：フォロー中",admin_user_followings_path(user.id),class: "text-reset" %></p>
        <p class="text-center"><%= link_to "#{user.followers.count}：フォロワー",admin_user_followers_path(user.id),class: "text-reset" %></p>
        <div class="mt-3"><%= link_to "この投稿を編集する" ,edit_admin_post_image_path , class: "btn btn-info" %></div>
        <div class="mt-3"><%= link_to "この投稿を削除する" ,admin_post_image_path,class: "btn btn-danger" ,method: :delete, "data-confirm" => "本当に削除しますか？"%></div>

      <% end %>
    </div>
  </div>

  <div class="col-lg-3 order-lg-first">
    <div class="detail-area">
      <div>
        <h6>地域</h6>
        <h5 class="mt-1"><%= post_image.tag.area %></h5>
      </div>
      <div>
        <h6>花の名前</h6>
        <h5 class="mt-1"><%= post_image.flower %></h5>
      </div>
      <div>
        <h6>花の咲いていた場所</h6>
        <h5 class="mt-1"><%= post_image.field %></h5>
      </div>
      <div>
        <h6>花が咲いていた日</h6>
        <h5 class="mt-1"><%= post_image.day %></h5>
      </div>
      <div>
        <h6 class="mt-3">開花状況</h6>
        <p class="mt-1">
          <div id="star<%= post_image.id %>"></div>
            <script>
              $('#star<%= post_image.id %>').empty();
              $('#star<%= post_image.id %>').raty({
                size     : 36,
                starOff  : "<%= asset_path('star-off.png') %>",
                starOn   : "<%= asset_path('star-on.png') %>",
                score: <%= post_image.star%>,
                half: false,
                readOnly: true,
              });
            </script>
        </p>
      </div>
    </div>
  </div>
</div>
<div>
  <% if post_image.address.present? %>
  <h6 class="mt-3">住所</h6>
    <p class="text-break"><%= post_image.address %></p>
  <% end %>
  <% if post_image.detail.present? %>
  <h6 class="mt-3">詳細</h6>
    <p class="text-break"><%= post_image.detail %></p>
  <% end %>
</div>