<div class="container">
  <h3 class="text-center mt-3">ユーザーログイン</h3>
  <div class="d-flex justify-content-center">
    <div class="sign-up-form">
      <%= form_with model: @user, url: user_session_path do |f| %>
        <form>
          <div class="form-group">
            <label for="InputEmail">メールアドレス</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text"><i class="fa-solid fa-envelope"></i></div>
              </div>
            <%= f.email_field :email, class: "form-control", id: "InputEmail", autofocus: true, autocomplete: "email" %>
            </div>
          </div>
          <div class="form-group">
            <label for="InputPassword">パスワード</label>
            <div class="input-group">
              <div class="input-group-prepend">
                <div class="input-group-text"><i class="fas fa-lock"></i></div>
              </div>
           <%= f.password_field :password, class: "form-control",id: "InputPassword" ,autocomplete: "current-password" %>
            </div>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :"ユーザー情報を保存" %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "ログイン" ,class: "btn btn-success" %>
          </div>
        </form>
      <% end %>
      <div class="mt-3">
        <%= render "user/shared/links"%>
      </div>
      <div class="my-5">
        <%= link_to "ゲストユーザーログイン", user_guest_sign_in_path, class: "btn-lg btn-primary",method: :post %>
      </div>
    </div>
  </div>
</div>