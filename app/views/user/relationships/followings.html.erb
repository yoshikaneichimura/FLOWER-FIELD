<div class="container">
  <% if current_user == @user %>
    <h3 class="text-center mt-3">あなたがフォロー中のユーザー：<%= @user.followings.count %></h3>
  <% else %>
    <h3 class="text-center mt-3"><%= @user.name %>さんがフォロー中のユーザー：<%= @user.followings.count %></h3>
  <% end %>
  <div class="row">
    <div class="col-lg-3 mt-3">

      <%= render 'user/users/profile', user: @user %>

    </div>
    <div class="col-lg-9 mt-3">
      <% if @users.exists? %>

       <%= render 'user/users/users', users: @users %>

      <% else %>
        <h3 class="text-center mt-5">フォロー中のユーザーはいません。</h3>
      <% end %>
    </div>
  </div>
  <p class="text-center mb-3"><%= link_to "＊ユーザー情報に戻る",user_user_path(@user.id),class: "text-reset" %></p>
</div>