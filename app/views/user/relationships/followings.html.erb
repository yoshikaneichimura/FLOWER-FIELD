<div class="container">
  <div class="row">
    <div class="col-lg-3 mt-5">
      <%= render 'user/users/profile', user: @user %>
    </div>
    <div class="col-lg-9 mt-5">
      <% if current_user == @user %>
        <h5 class="text-center mb-3">あなたがフォロー中のユーザー：<%= @user.followings.count %></h5>
      <% else %>
        <h5 class="text-center mb-3"><%= @user.name %>さんがフォロー中のユーザー：<%= @user.followings.count %></h5>
      <% end %>

      <% if @users.exists? %>
       <%= render 'user/users/users', users: @users %>
      <% else %>
        <h3 class="text-center">ユーザーはいません</h3>
      <% end %>
    </div>
  </div>
  <p class="text-center"><%= link_to "ユーザー情報に戻る",user_user_path(@user.id),class: "text-reset" %></p>
</div>