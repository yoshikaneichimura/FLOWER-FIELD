<div class="container">
  <h3 class="text-center mt-3">ユーザー情報</h3>
  <div class="row">
    <div class="col-lg-3 mt-5">

      <%= render 'user/users/profile', user: @user %>

    </div>
    <div class="col-lg-9 mt-3">
      <% if current_user == @user %>
        <p class="text-center mt-3">あなたのフォロワー：<%= @user.followers.count %></p>
      <% else %>
        <p class="text-center mt-3"><span class="text-white"><%= @user.name %></span>さんのフォロワー：<%= @user.followers.count %></p>
      <% end %>

      <% if @users.exists? %>
        <div class="d-flex justify-content-center mt-3">
          <div class="relationship-group">

            <%= render 'user/users/users', users: @users %>

          </div>
        </div>
      <% else %>
        <div class="informetion">
          <%= image_tag("green-flower.png")%>
          <h5>フォロワーはいません。</h5>
        </div>
      <% end %>
    </div>
  </div>
  <p class="text-center"><%= link_to "＊ ユーザーの情報を見る",user_user_path(@user.id),class: "text-reset" %></p>
</div>