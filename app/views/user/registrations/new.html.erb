<div class="container">
  <div class="d-flex justify-content-center mt-3">
    <div>
    <% if flash[:notice] %>
      <p id = "notice">
        <%= flash[:notice] %>
      </p>
    <% end %>
    <%= render "user/shared/error_messages", resource: resource %>
    </div>
  </div>
  <h3 class="text-center mt-3">新規登録</h3>
  <div class="d-flex justify-content-center">
    <div class="mt-3">
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <form>
          <div class="form-group">
            <%= f.label :"ユーザーネーム" %><br />
            <%= f.text_field :name ,class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :"メールアドレス" %><br />
            <%= f.email_field :email ,class: "form-control" ,autofocus: true, autocomplete: "email" %>
          </div>
          <div class="form-group">
            <%= f.label :"パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password ,class: "form-control" ,autocomplete: "new-password" %>
          </div>
          <div class="form-group">
            <%= f.label :"パスワード確認用" %><br />
            <%= f.password_field :password_confirmation ,class: "form-control",autocomplete: "new-password" %>
          </div>
          <div class="actions">
            <%= f.submit "新規登録" ,class: "btn btn-success" %>
          </div>
        </form>
      <% end %>
      <div class="mt-3">
        <%= render "user/shared/links" %>
      </div>
      <div class="my-5">
        <%= link_to "ゲストユーザーログイン", user_guest_sign_in_path,class: "btn-lg btn-primary", method: :post %>
      </div>
    </div>
  </div>
</div>