<h1>新規登録</h1>

<%= form_with model: @user, url: user_registration_path do |f| %>

  <%= render "user/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"ユーザーネーム" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード確認用" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "user/shared/links" %>

<%= link_to "ゲストユーザーログインはこちら", user_guest_sign_in_path, method: :post %>
